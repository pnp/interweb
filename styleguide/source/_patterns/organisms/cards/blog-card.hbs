<article class="card blog">
    {{#blog}}
    <figure class="blog-media">
        <img src="{{ img.src }}" class="blog-media-img" {{ img.alt }}>
    </figure>
    <div class="blog-content">
        <h2 class="blog-headline">
            {{ headline }}
        </h2>
        <p class="blog-excerpt">
            {{ description }}
        </p>
        <div class="blog-meta">
            <div class="blog-info">
                <time class="blog-created" datetime="2018-07-07">{{ date }}</time>
                <div class="blog-author">by {{ author }}</div>
            </div>
            <div class="blog-type">
                <div class="blog-cat">
                {{ type }}
                </div>
            </div>
        </div>
    </div>
    {{/blog}}
</article>