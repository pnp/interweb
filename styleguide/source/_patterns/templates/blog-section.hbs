{{#blog-section }}
<section class="section-base blog">
    <div class="section-inner">
        <header>
            <H1>{{ headline }}</H1>
            <p>{{ description }}</p>
        </header>
        <menu class="section-grid">
            {{#each blog-posts }}
            <li>
                {{>organisms-blog-card}}
            </li>
            {{/each}}
        </menu>
    </div>
</section>
{{/blog-section }}